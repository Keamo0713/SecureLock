@model pleSecureDoc.Models.DocumentRequest

@{
    ViewData["Title"] = "Request Document";
}

<h2>Request a Document</h2>

<form asp-action="RequestDocument" method="post">
    <div class="form-group">
        <label asp-for="EmployeeId"></label>
        <input asp-for="EmployeeId" class="form-control" />
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DocumentName"></label>
        <input asp-for="DocumentName" class="form-control" />
        <span asp-validation-for="DocumentName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
